<% if posts.empty? %>
    <p style='margin-top:20px;'>Không có tin nào ở đây.<p>
	<% else -%>
    <div class="row">
	    <table class="col-12 list-item" style="text-align: center;">	
		    	<% posts.each do |post| %>
	    	<tr>
	    		<td style=" width: 100px; height: 80px;"><%= image_tag url_for(post.image),:style => "width: 100%; height: 100%" %></td>
	    		<td><p><%=post.title%></p><p><%=post.price%></p></td>
	    		<td><%= link_to 'Sửa', edit_post_path(post.id)%></td>
	    		<td><%= link_to 'Xoá', post_path(post.id), :method => :delete, :confirm => 'Bạn có chắc là muốn xoá sản phẩm này?' %></td>
	    	</tr>
	    	<% end -%>
	    </table>
    </div>

	<% end -%>